<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.minu.demoapp.Activity.UserProfileActivity">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/userImg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:siBorderWidth="6dp"
        app:siBorderColor="@color/timestamp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
       android:id="@+id/userName"
        android:padding="5dp"
        android:textColor="@color/primary_text"
        android:text="Minu Sarraf"
        android:layout_below="@+id/userImg"
        android:layout_alignEnd="@+id/userImg"
        android:layout_alignStart="@+id/userImg"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:fontFamily="serif-monospace"
        android:textSize="18sp"
        android:textStyle="normal|bold" />
    <com.rey.material.widget.Button
        android:layout_width="185dp"
        android:id="@+id/logout"
        android:gravity="center"
        android:textColor="@color/primary_text"
        android:layout_alignEnd="@+id/userName"
        android:layout_alignStart="@+id/userName"
        android:layout_below="@id/userName"
        android:text="Logout"
        android:layout_height="50dp" />
</RelativeLayout>
